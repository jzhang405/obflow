{
  "name": "@iflow-ai/niopd",
  "version": "1.0.32",
  "description": "NioPD CLI 安装工具 - AI驱动产品管理工具包",
  "main": "lib/index.js",
  "bin": {
    "niopd": "./bin/niopd.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node bin/niopd.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint lib/ bin/",
    "lint:fix": "eslint lib/ bin/ --fix",
    "build": "npm run lint && npm test",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/niopd-workspace/"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "keywords": [
    "niopd",
    "claude-code",
    "iflow",
    "product-management",
    "cli",
    "installer"
  ],
  "author": "NioPD Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iflow-ai/NioPD.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "bin/",
    "lib/",
    "core/",
    "README.md",
    "LICENSE",
    "AGENTS.md",
    "COMMANDS.md"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "fs-extra": "^11.1.1",
    "glob": "^8.1.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "8.57.1",
    "jest": "29.7.0"
  }
}
