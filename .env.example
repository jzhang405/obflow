# Environment Variables for ObFlow
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# DeepSeek Provider
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# iFlow Provider (Multi-Model Platform)
IFLOW_API_KEY=your_iflow_api_key_here
IFLOW_BASE_URL=https://cloud.iflow.cn/v1

# =============================================================================
# Obsidian Local REST API
# =============================================================================

# Obsidian vault path (optional, defaults to ~/Documents/Obsidian/Primary)
OBSIDIAN_VAULT_PATH=~/Documents/Obsidian/MyVault

# API Key if your Obsidian REST API requires authentication (usually not needed)
OBSIDIAN_API_KEY=

# =============================================================================
# Application Settings
# =============================================================================

# Node environment
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Port for local development server (if needed)
PORT=3000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable specific providers (both enabled by default in config)
ENABLE_DEEPSEEK=true
ENABLE_IFLOW=true

# =============================================================================
# Security Settings
# =============================================================================

# Encryption key for sensitive data (optional)
ENCRYPTION_KEY=

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=localhost,127.0.0.1

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable detailed logging
VERBOSE=false

# Mock API responses for testing
MOCK_MODE=false